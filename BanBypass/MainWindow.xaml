<Window x:Class="BanBypass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BanBypass"
        mc:Ignorable="d"
        Title="Isolumia Bypass"
        Height="258" 
        Width="402"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="isolumia.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#06969e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C3C3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C1C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#1E1E1E" Margin="0,0,0,21">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#141515" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock 
                      FontSize="14" 
                      Foreground="White" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Margin="12,0,0,0"><Run Text="Isolumia"/><Run Text=".c"/><Run Language="en-de" Text="o"/><Run Text="m"/></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="322,1,0,0">
                <Button x:Name="MinimizeButton" 
                        Content="─" 
                        Width="25" Height="23" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#CCCCCC" 
                        FontSize="12"
                        Click="MinimizeButton_Click"/>
                <Button x:Name="TrayButton" 
                        Content="🗗" 
                        Width="25" Height="23" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#CCCCCC" 
                        FontSize="10"
                        ToolTip="Hide to System Tray"
                        Click="TrayButton_Click"/>
                <Button x:Name="CloseButton" 
                        Content="✕" 
                        Width="25" Height="22" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#CCCCCC" 
                        FontSize="12"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Background="#141515" Padding="15" Height="29" VerticalAlignment="Top">
            <StackPanel Margin="0,-19,0,-9">
                <TextBlock 
                          FontSize="19" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          FontFamily="Segoe UI"><Run Text="Isolumia "/><Run Language="en-de" Text="B"/><Run Text="an "/><Run Text="Bypass"/></TextBlock>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="15,15,15,43" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#2C2C2C" BorderBrush="#06969e" BorderThickness="1" CornerRadius="5" Padding="15" Margin="22,16,22,25" Grid.ColumnSpan="2">
                <StackPanel Margin="0,4,0,-1">
                    <TextBlock Text="Status" FontSize="15" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Height="22"/>
                    <TextBlock x:Name="StatusText" 
                              Text="Ready - Click the button below" 
                              FontSize="14" 
                              Foreground="#02CCD7" 
                              FontFamily="Segoe UI"
                              TextWrapping="Wrap"
                              Height="23"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="12">
            <Button x:Name="ToggleButton" 
                    Content="Start Service" 
                    Style="{StaticResource ModernButton}"
                    Click="ToggleButton_Click"
                    Width="160" Height="28"/>
        </StackPanel>

        <Button x:Name="InfoButton" 
                Content="📋" 
                Width="28" Height="30" 
                Background="Transparent" 
                BorderThickness="0" 
                Foreground="#CCCCCC" 
                FontSize="18"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                ToolTip="View bypass requirements and limitations"
                Click="InfoButton_Click"
                Cursor="Hand" Grid.Row="3" Margin="0,0,3,4"/>

    </Grid>
</Window>
